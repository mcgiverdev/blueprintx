        private function ensureSpatieSecurity(string $guard, array $roles, array $permissions): void
        {
                $tableNames = config('permission.table_names', []);

                if (! is_array($tableNames)) {
                        $tableNames = [];
                }

                $tableNames = array_merge($tableNames, [
                        'roles' => 'roles',
                        'permissions' => 'permissions',
                        'model_has_permissions' => 'model_has_permissions',
                        'model_has_roles' => 'model_has_roles',
                        'role_has_permissions' => 'role_has_permissions',
                ]);

                config(['permission.table_names' => $tableNames]);

                $columnNames = config('permission.column_names', []);

                if (! is_array($columnNames)) {
                        $columnNames = [];
                }

                $columnNames['model_morph_key'] = 'model_id';

                config(['permission.column_names' => $columnNames]);

                $guardNames = config('permission.guard_names', ['web']);

                if (! is_array($guardNames)) {
                        $guardNames = [$guardNames];
                }

                if (! in_array($guard, $guardNames, true)) {
                        $guardNames[] = $guard;
                }

                config(['permission.guard_names' => $guardNames]);
                config(['permission.defaults.guard' => $guard]);

                $this->ensureSpatieTables();

                $permissionRegistrar = app(PermissionRegistrar::class);
                $permissionRegistrar->forgetCachedPermissions();

                foreach ($permissions as $permission) {
                        Permission::findOrCreate($permission, $guard);
                }

                foreach ($roles as $role) {
                        Role::findOrCreate($role, $guard);
                }
        }

        private function ensureSpatieTables(): void
        {
                if (! Schema::hasTable('permissions')) {
                        Schema::create('permissions', function (Blueprint $table): void {
                                $table->id();
                                $table->string('name');
                                $table->string('guard_name');
                                $table->timestamps();
                                $table->unique(['name', 'guard_name']);
                        });
                }

                if (! Schema::hasTable('roles')) {
                        Schema::create('roles', function (Blueprint $table): void {
                                $table->id();
                                $table->string('name');
                                $table->string('guard_name');
                                $table->timestamps();
                                $table->unique(['name', 'guard_name']);
                        });
                }

                if (! Schema::hasTable('model_has_permissions')) {
                        Schema::create('model_has_permissions', function (Blueprint $table): void {
                                $table->unsignedBigInteger('permission_id');
                                $table->string('model_type');
                                $table->string('model_id');
                                $table->index(['model_id', 'model_type'], 'model_has_permissions_model_id_model_type_index');
                                $table->foreign('permission_id')->references('id')->on('permissions')->onDelete('cascade');
                        });
                }

                if (! Schema::hasTable('model_has_roles')) {
