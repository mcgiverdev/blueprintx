{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blueprintx.dev/schema/blueprint.json",
  "type": "object",
  "required": [
    "entity",
    "table",
    "fields"
  ],
  "additionalProperties": false,
  "properties": {
    "entity": {
      "type": "string",
      "pattern": "^[A-Z][A-Za-z0-9_]*$"
    },
    "module": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9\\-]+(\\/[a-z0-9\\-]+)*$"
    },
    "table": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "architecture": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "type": {
            "type": "string",
            "enum": [
              "string",
              "text",
              "integer",
              "bigInteger",
              "decimal",
              "float",
              "boolean",
              "date",
              "datetime",
              "json",
              "uuid"
            ]
          },
          "rules": {
            "type": [
              "string",
              "null"
            ]
          },
          "default": {},
          "precision": {
            "type": [
              "integer",
              "null"
            ],
            "minimum": 1
          },
          "scale": {
            "type": [
              "integer",
              "null"
            ],
            "minimum": 0,
            "maximum": 10
          },
          "nullable": {
            "type": [
              "boolean",
              "null"
            ]
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "decimal"
                }
              }
            },
            "then": {
              "required": [
                "precision",
                "scale"
              ]
            }
          }
        ]
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "target",
          "field"
        ],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "belongsTo",
              "hasOne",
              "hasMany",
              "belongsToMany"
            ]
          },
          "target": {
            "type": "string",
            "pattern": "^[A-Z][A-Za-z0-9_]*$"
          },
          "field": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*(_id)?$"
          },
          "rules": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timestamps": {
          "type": "boolean"
        },
        "softDeletes": {
          "type": "boolean"
        },
        "audited": {
          "type": "boolean"
        },
        "versioned": {
          "type": "boolean"
        }
      }
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "base_path": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^\\/[a-z0-9\\-\\/]*$"
        },
        "middleware": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type"
            ],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "crud",
                  "patch",
                  "search",
                  "stats",
                  "restore",
                  "bulk",
                  "custom"
                ]
              },
              "name": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "field": {
                "type": [
                  "string",
                  "null"
                ],
                "pattern": "^[a-z][a-z0-9_]*$"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "by": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "method": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "path": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "includes": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "required": [
                      "relation"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "relation": {
                        "type": "string"
                      },
                      "alias": {
                        "type": "string"
                      },
                      "resource": {
                        "type": "string"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "docs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "examples": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          },
          "properties": {
            "create": {
              "type": "object"
            },
            "update": {
              "type": "object"
            },
            "patch": {
              "type": "object"
            }
          }
        }
      }
    },
    "errors": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "code": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "status": {
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 100,
                  "maximum": 599
                },
                "extends": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "description": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "owner": {
          "type": [
            "string",
            "null"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
